{% extends "base.html.j2" %}
{% block content %}
<p>Hello World from books/index.j2</p>

<div class="books">
{% for book in books_list %}
    <article class="book">
        <h3>{{ book }}</h3>
        <form class="delete-form" action="{{ url_for('.delete_book', id=book.id) }}" method="POST">
            <button>Delete Book</button>
        </form>
    </article>
{% endfor %}
</div>

{% endblock %}